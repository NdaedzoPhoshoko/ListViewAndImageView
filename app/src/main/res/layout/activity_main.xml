<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/darcula_dark"
    tools:context=".MainActivity"

    >

    <LinearLayout
        android:id="@+id/headButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Home"
            style="?android:attr/buttonBarButtonStyle"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Explore"
            style="?android:attr/buttonBarButtonStyle"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            style="?android:attr/buttonBarButtonStyle"
            android:textStyle="bold"
            />
    </LinearLayout>

    <ImageButton
        android:id="@+id/songImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/headButtonsLayout"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:contentDescription="Image of the song playing"
        android:src="@drawable/ic_launcher_foreground"
        android:visibility="visible" />

    <ListView
        android:id="@+id/songList"
        android:layout_width="wrap_content"
        android:layout_height="510dp"
        android:layout_below="@id/songImage"
        android:contextClickable="true"
        android:paddingEnd="13dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/darcula"
        />

</RelativeLayout>